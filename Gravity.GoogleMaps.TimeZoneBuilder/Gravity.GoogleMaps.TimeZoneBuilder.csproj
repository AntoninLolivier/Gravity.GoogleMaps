<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net10.0;net9.0;net8.0</TargetFrameworks>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <DocumentationFile>.\docs\Gravity.GoogleMaps.TimeZoneBuilder.documentation.XML</DocumentationFile>
        
        <!-- Nuget infos -->
        <PackageId>Gravity.GoogleMaps.TimeZoneBuilder</PackageId>
        <Version>1.0.2</Version>
        <Authors>GravityApps</Authors>
        <Company>GravityApps</Company>
        <Description>Fluent, type-safe URL builder for the Google Time Zone API, providing a clean and extensible way to generate fully-validated Time Zone API requests.</Description>
        <PackageTags>google;maps;timezone;builder;url;gravity</PackageTags>
        <RepositoryUrl>https://github.com/AntoninLolivier/Gravity.GoogleMaps/tree/master/Gravity.GoogleMaps.TimeZoneBuilder</RepositoryUrl>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <PackageProjectUrl>https://github.com/AntoninLolivier/Gravity.GoogleMaps</PackageProjectUrl>
        <IncludeSymbols>true</IncludeSymbols>
        <LangVersion>default</LangVersion>
        <PackageIcon>Gravity.GoogleMaps.png</PackageIcon>
    </PropertyGroup>

    
    <ItemGroup>
        <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleToAttribute">
            <_Parameter1>Gravity.GoogleMaps.TimeZoneBuilder.Tests</_Parameter1>
        </AssemblyAttribute>
    </ItemGroup>
    
    <ItemGroup>
        <None Include="README.md" Pack="true" PackagePath="\"/>
        <None Include="Gravity.GoogleMaps.png" Pack="true" PackagePath="\"/>
    </ItemGroup>

</Project>
